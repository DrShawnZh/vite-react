{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": false,
    "esModuleInterop": false,
    "declaration": true, // 生成定义文件
    "declarationMap": false, // 生成定义sourceMap
    "outDir": "./lib"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}